{
  "name": "conditional-decorator",
  "version": "0.1.3",
  "description": "Decorator's decorator for applying it on the target conditionally",
  "main": "dist/index.js",
  "scripts": {
    "install": "tsd --config tsd.json reinstall --overwrite",
    "clean": "rm -rfv dist && rm -rfv src/*.js",
    "build": "npm run clean && npm run lint && tsc && npm run dist && npm run docs",
    "dist": "mkdir -pv dist && cp -v src/*.js dist/ && mv -v src/*.d.ts dist/",
    "start": "npm run build",
    "test": "npm run build && npm run istanbul && npm run codeclimate",
    "test:watch": "npm run build && npm run istanbul:watch",
    "test:mocha": "npm run build && npm run mocha",
    "mocha": "mocha --compilers ts:espower-typescript/guess test/*.spec.ts",
    "istanbul": "istanbul cover _mocha -- --compilers ts:espower-typescript/guess test/*.spec.ts",
    "istanbul:watch": "istanbul cover node_modules/.bin/_mocha -- --compilers ts:espower-typescript/guess test/*.spec.ts -w",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "lint": "tslint -c tslint.json test/*.ts src/*.ts",
    "docs": "typedoc --out docs --module commonjs src",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkqubo/conditional-decorator.git"
  },
  "keywords": [
    "JavaScript",
    "TypeScript"
  ],
  "author": "tkqubo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tkqubo/conditional-decorator/issues"
  },
  "homepage": "https://github.com/tkqubo/conditional-decorator#readme",
  "devDependencies": {
    "codeclimate-test-reporter": "^0.1.1",
    "espower-typescript": "^1.0.0",
    "istanbul": "^0.3.22",
    "mocha": "^2.3.3",
    "power-assert": "^1.1.0",
    "sinon": "^1.17.1",
    "tsd": "^0.6.5",
    "tslint": "^2.5.1",
    "typedoc": "^0.3.12",
    "typescript": "^1.6.2"
  }
}
